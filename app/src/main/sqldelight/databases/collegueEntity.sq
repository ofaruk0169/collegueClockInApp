CREATE TABLE collegueEntity (
    id INTEGER NOT NULL PRIMARY KEY,
    firstName TEXT NOT NULL,
    lastName TEXT NOT NULL
);

getPersonById:
SELECT *
FROM collegueEntity
WHERE id = :id;

getAllPersons:
SELECT *
FROM collegueEntity;

insertPerson:
INSERT OR REPLACE
INTO collegueEntity
VALUES (?, ?, ?);

deletePersonById:
DELETE FROM collegueEntity
WHERE id = :id;

